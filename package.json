{
  "name": "@neomura/js-command-line-helpers",
  "description": "Helpers for writing command line tools using NodeJS.",
  "version": "0.0.0",
  "engines": {
    "node": ">=14.15.3"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "!**/unit.*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neomura/js-command-line-helpers"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "4.0.3",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "del-cli": "3.0.1",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jasmine": "4.3.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "typescript": "4.7.4"
  },
  "scripts": {
    "buildClean": "del-cli \"**/*.js\" \"**/*.d.ts\" \"!**/node_modules/**/*\"",
    "buildLint": "eslint \"**/*.ts\"",
    "buildTypeScript": "tsc",
    "buildNyc": "nyc --check-coverage --all --exclude \"**/*.ts\" --exclude \"**/*.d.ts\" --exclude \"**/unit.*\" --lines 100 --functions 100 --branches 100 --statements 100 npm run-script buildJasmine",
    "buildJasmine": "jasmine --config=jasmine.json",
    "build": "npm-run-all buildClean buildLint buildTypeScript buildNyc"
  },
  "types": "index.d.ts",
  "sideEffects": false
}
